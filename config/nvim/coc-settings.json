{
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "elixir",
    "eelixer",
    "javascript",
    "typescript",
    "json",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx",
    "graphql"
  ],
  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.acceptSuggestionOnCommitCharacter": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.numberSelect": false,
  "suggest.enablePreview": true,
  "suggest.snippetIndicator": "►",
  "suggest.noselect": false,
  "suggest.timeout": 5000,

  "diagnostic.enable": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.displayByAle": false,
  "diagnostic.locationlist": false,
  "diagnostic.signOffset": 1000,
  "diagnostic.highlightOffset": 1000,
  "diagnostic.errorSign": "✖-",
  "diagnostic.warningSign": "⬥-",
  "diagnostic.infoSign": "‣",
  "diagnostic.hintSign": "‣",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextLines": 3,
  "codeLens.enable": true,
  "codeLens.separator": "❯ ",

  "tsserver.formatOnType": false,
  "javascript.format.enabled": false,
  "eslint.run": "onType",

  "languageserver": {
    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"],
      "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    }
  },
  "elixir.pathToElixirLS": "~/Projects/elixir-ls/release/language_server.sh"
}
